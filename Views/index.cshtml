@{
  Layout="Shared/_Layout.cshtml";
}

<div class="jumbotron">
  <h2>Rock, Paper, Scissors</h2>
</div>

<h2>Let's Play that Ol' Schoolyard Classic</h2>

<div class="panel panel-success">
  <div class="panel-heading">Player Choose Your Weapon</div>
  <form action="/result" method="post">
  <div class="panel-body">
      <div class="radio"><input type ="radio" name="player1" id="player1" value="Rock">Rock</div>
      <div class="radio"><input type ="radio" name="player1" id="player1" value="Paper">Paper</div>
      <div class="radio"><input type ="radio" name="player1" id="player1" value="Scissors">Scissors</div>
  </div>
</div>

        <button type="submit" name="button" class="btn btn-md btn-success">Let's See!</button>
    </form>

@if (@Model != null)
{
   <p>Number of games so far: @Model[0]</p>
   <p>Your choice: @Model[3]</p>
   <p>Computer choice: @Model[4]</p>
   <p>Result of latest game: @Model[5]</p>
}
  <a href="/testPercentage">See your analysis</a>
